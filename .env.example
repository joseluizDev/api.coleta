# =============================================================================
# API COLETA - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your values
# All URLs and sensitive credentials should be configured here
# =============================================================================

# =============================================================================
# DATABASE
# =============================================================================
DB_SERVER=localhost
DB_PORT=3306
DB_NAME=db
DB_USER=root
DB_PASSWORD=your_password_here

# =============================================================================
# MIGRATIONS
# =============================================================================
# Set to "true" to apply pending migrations automatically on startup
# Recommended: true for dev, false for prod (apply manually before deploy)
APPLY_MIGRATIONS_ON_STARTUP=true

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET_KEY=your_secure_jwt_secret_key_here
JWT_ISSUER=backapppromo
JWT_AUDIENCE=backapppromo

# =============================================================================
# MINIO OBJECT STORAGE
# =============================================================================
MINIO_ENDPOINT=apis-minio.w4dxlp.easypanel.host
MINIO_ACCESS_KEY=your_minio_access_key_here
MINIO_SECRET_KEY=your_minio_secret_key_here
# Public URL base for file access (including protocol)
MINIO_PUBLIC_URL=https://apis-minio.w4dxlp.easypanel.host

# =============================================================================
# GOOGLE API
# =============================================================================
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# ONESIGNAL PUSH NOTIFICATIONS
# =============================================================================
ONESIGNAL_API_KEY=your_onesignal_api_key_here
ONESIGNAL_APP_ID=your_onesignal_app_id_here
ONESIGNAL_API_URL=https://api.onesignal.com/notifications?c=push

# =============================================================================
# ZEPTOMAIL EMAIL SERVICE
# =============================================================================
ZEPTOMAIL_API_KEY=your_zeptomail_api_key_here
ZEPTOMAIL_API_URL=https://api.zeptomail.com/v1.1/email
ZEPTOMAIL_FROM_EMAIL=noreply@agrosyste.com.br

# =============================================================================
# COMPANY BRANDING / CONTACT
# =============================================================================
COMPANY_LOGO_URL=https://www.agrosyste.com/assets/logo.png
COMPANY_WHATSAPP_LINK=https://wa.me/5599984989759
COMPANY_WHATSAPP_NUMBER=5599984989759

# =============================================================================
# ADMIN EMAILS (comma-separated for multiple)
# =============================================================================
ADMIN_EMAILS=admin1@example.com,admin2@example.com
